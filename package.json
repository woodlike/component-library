{
  "name": "@wdlk/ui-packages",
  "version": "1.0.1",
  "private": true,
  "description": "WDLK UI Packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:components": "yarn workspace @wdlk/components build:dist",
    "build:containers": "yarn workspace @wdlk/containers build",
    "build:store": "yarn workspace @wdlk/store-front build",
    "build:theme": "yarn workspace gatsby-theme-query build",
    "build:theme-query": "yarn workspace styled-factory build",
    "dev:components": "yarn workspace @wdlk/components dev",
    "dev:store": "yarn workspace @wdlk/store-front dev",
    "dev:theme-query": "yarn workspace theme-query dev",
    "lint:components": "yarn workspace @wdlk/components lint",
    "lint:containers": "yarn workspace @wdlk/containers lint",
    "lint:store": "yarn workspace @wdlk/store-front lint",
    "lint:theme": "yarn workspace gatsby-theme-query lint",
    "lint:theme-query": "yarn workspace theme-query lint",
    "test:components": "yarn workspace @wdlk/components test",
    "test:containers": "yarn workspace @wdlk/containers test",
    "test:store": "yarn workspace @wdlk/store-front test",
    "test:theme-query": "yarn workspace theme-query test",
    "type-check:store": "yarn workspace @wdlk/store-front type-check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "@typescript-eslint/parser": "2.20.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.18.3",
    "prettier": "1.19.1",
    "typescript": "3.8.2"
  }
}
