{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "importHelpers": true,
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build/lib",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "rootDirs": ["src"],
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "watch": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "scripts", "./docz"]
}
